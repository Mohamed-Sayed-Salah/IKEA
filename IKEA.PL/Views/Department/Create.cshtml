@model CreatedDepartmentDTO
@{
    ViewData["Title"] = "Create";
}

<h1>Create New Department</h1>

<form method="post" action="/Department/Create" >
    <div class="form-group">
        <label asp-for="Code" class="form-label"></label>
        <input  asp-for="Code" class="form-control"/>
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CreationDate" class="form-label"></label>
        <input type="date" asp-for="CreationDate" class="form-control" />
        <span asp-validation-for="CreationDate" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <input type="submit" value="Create" class="btn btn-primary" /> | 
        <a asp-controller="Department" asp-action="Index">Back To List</a>
    </div>
</form>
