@model  DepartmentEditViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>


<form method="post" asp-action="Edit">
    <div class="form-group">
        <label asp-for="Code" class="form-label"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CreationDate" class="form-label"></label>
        <input type="date" asp-for="CreationDate" class="form-control" />
        <span asp-validation-for="CreationDate" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <input type="submit" value="Save" class="btn btn-primary" /> |
        <a asp-controller="Department" asp-action="Index" class="btn btn-light">Cancel</a>
    </div>
</form>